<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/text_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="only"
        android:textColor="@color/black_title"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="."
        android:textColor="@color/black_title"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/text_word"
        app:layout_constraintLeft_toRightOf="@+id/text_word" />

    <TextView
        android:id="@+id/text_soundmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="/ˈoʊn.li/"
        android:textColor="@color/black_subtitle"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/text_dot"
        app:layout_constraintLeft_toRightOf="@id/text_dot" />

    <TextView
        android:id="@+id/text_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="adverb"
        android:textColor="@color/black_subtitle"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@id/text_word"
        app:layout_constraintTop_toBottomOf="@id/text_word" />

    <TextView
        android:id="@+id/text_line"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="5dp"
        android:background="@color/blue_line"
        app:layout_constraintLeft_toLeftOf="@id/text_part"
        app:layout_constraintTop_toBottomOf="@id/text_part" />

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_marginTop="10dp"
        android:src="@drawable/flag"
        app:layout_constraintLeft_toLeftOf="@id/text_line"
        app:layout_constraintTop_toBottomOf="@id/text_line" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="1.5dp"
        android:layout_marginLeft="2dp"
        android:text="only (NO ONE/NOTHING ELSE)"
        android:textColor="@color/black_title"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/image_icon"
        app:layout_constraintTop_toTopOf="@id/image_icon" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_title">

        <TextView
            android:id="@+id/text_level"
            android:layout_width="60px"
            android:layout_height="40px"
            android:layout_marginTop="3.5dp"
            android:background="@drawable/shape_level_a1"
            android:gravity="center"
            android:text="A1"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="@id/frame_title"
            app:layout_constraintTop_toTopOf="@id/frame_title" />

        <TextView
            android:id="@+id/text_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="not anyone or anything else wwwwwww"
            android:textColor="@color/black_subtitle"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@id/frame_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_dictionary_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="20dp"
        android:text="Dictionary example:"
        android:textColor="@color/black_title"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/frame_title" />

    <TextView
        android:id="@+id/text_dictionary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:text="Vegetarianism is very popular these days."
        android:textColor="@color/black_subtitle"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_dictionary_tag" />

    <TextView
        android:id="@+id/text_learner_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="20dp"
        android:text="Learner example:"
        android:textColor="@color/black_title"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_dictionary" />

    <TextView
        android:id="@+id/text_learner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70px"
        android:layout_marginTop="5dp"
        android:text="Vegetarianism is very popular these days."
        android:textColor="@color/black_subtitle"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/text_learner_tag" />

    <TextView
        android:id="@+id/text_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:text="1/12345"
        app:layout_constraintBottom_toTopOf="@+id/au"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/au"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>